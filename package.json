{
  "name": "blog.uskay.io",
  "version": "2.0.0",
  "type": "module",
  "description": "Personal blog static site generator",
  "main": "index.js",
  "scripts": {
    "build": "tsc && node index.js",
    "build-article": "tsc && node index.js --target=articleOnly",
    "build-image": "tsc && node index.js --target=imageOnly",
    "dev": "firebase serve -p 5001",
    "prod": "firebase deploy"
  },
  "author": "Yusuke Utsunomiya",
  "license": "Apache 2.0",
  "dependencies": {
    "@squoosh/lib": "^0.4.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.24"
  }
}
